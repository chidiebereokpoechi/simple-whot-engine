    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@types/uuid": "^8.0.1",
    "jest": "^26.2.2",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
